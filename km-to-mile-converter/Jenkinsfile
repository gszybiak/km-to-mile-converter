pipeline {
    agent any

    environment {
        MAVEN_HOME = tool name: 'Maven 2', type: 'maven'
        JAVA_HOME = tool name: 'JDK 17', type: 'jdk'
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/gszybiak/km-to-mile-converter.git'
            }
        }

        stage('Build & Test') {
            steps {
                script {
                    bat "${MAVEN_HOME}\\bin\\mvn.cmd clean test"
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    bat "${MAVEN_HOME}\\bin\\mvn.cmd spring-boot:run"
                }
            }
        }
    }

    post {
        always {
            junit '**/target/surefire-reports/*.xml'
        }
    }
}
